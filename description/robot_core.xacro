<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="chassis_l" value="375"/>

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
     
    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>
     
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
     
   <material name="red">
        <color rgba="1 0 0 1"/>
    </material>
     
<!-- Base Link_-->
    <link name="base_link">
    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis"/>
        <origin xyz="-0.1875 0 0.006"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.1875 0 0.045"/>
            <geometry>
                <box size="0.375 .225 .090"/>
            </geometry>
            <material name="white"/>
        </visual>
        <visual>
            <origin xyz="0.135 0 0.110"/>
            <geometry>
                <box size=".145 .200 .040"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size=".375 .225 .090"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.375" y="0.225" z="0.090">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

<!-- Left Wheel Link_-->
    <joint name="left_wheel_joint" type="continuous"> 
        <parent link="base_link" />
        <child link="left_wheel"/>
        <origin xyz="0 0.150 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>    
            <geometry>
                <cylinder radius="0.09" length="0.066"/>
            </geometry>
            <material name="blue"/>
       </visual>
        <collision>    
            <geometry>
                <cylinder radius="0.09" length="0.066"/>
            </geometry>
       </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.01">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- Right Wheel Link_-->
    <joint name="right_wheel_joint" type="continuous"> 
        <parent link="base_link" />
        <child link="right_wheel"/>
        <origin xyz="0 -0.150 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>    
            <geometry>
                <cylinder radius="0.09" length="0.066"/>
            </geometry>
            <material name="blue"/>
       </visual>
        <collision>    
            <geometry>
                <cylinder radius="0.09" length="0.066"/>
            </geometry>
       </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.01">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>


    <!-- Castor Wheel Link_-->
    <joint name="castor_wheel_joint" type="fixed"> 
        <parent link="base_link" />
        <child link="castor_wheel"/>
        <origin xyz="0.1 0 -0.0"/>
    </joint>

    <link name="castor_wheel">
        <visual>    
            <geometry>
                <sphere radius="0.09"/>
            </geometry>
            <material name="black"/>
       </visual>
        <collision>    
            <geometry>
                <sphere radius="0.09"/>
            </geometry>
       </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.09">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="castor_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>        
    </gazebo>


</robot>

